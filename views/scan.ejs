<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/dashbstyle.css">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.iconify.design/2/2.0.3/iconify.min.js"></script>
</head>

<body>
  <%- include('./partials/nav_menu.ejs') %>
  <div class="home-content" style="width: 100%; position: relative;" aria-live="polite" aria-atomic="true">
    <div class="sales-boxes" style="width: 100%;">
      <div class="recent-sales box" style="width: 100%;">
        <%- include ('./partials/messages') %>
        <form action='/scan' method="POST">
          <div class="form-row mb-3 justify-content-around">
            <div class="form-group">
              <label for="scanname">Scan Name :</label>
              <input class="form-control" type="text" name="scanname" placeholder="Example Scan" required>
            </div>
            <div class="form-group">
              <label for="url">Website URL :</label>
              <input class="form-control" class="form-control" placeholder="e.g. http://example.com" type="url" name="url" required>
            </div>
            <div class="form-group">
              <label for="ports">Ports :</label>
              <input class="form-control" class="form-control" placeholder="e.g. 21,80,443 or all or top" type="text" name="ports" required>
            </div>
            <div class="form-group">
              <label for="scantype">Type :</label>
              <select class="form-control" name="scantype">
                <option>Full Scan</option>
                <option>Port/Service Scan</option>
                <option>SQL Injection</option>
                <option>CSRF Vulnerability Scan</option>
              </select>
            </div>
          </div>
          <div class="mx-auto" style="width:fit-content;">
            <button id="scansubmit" class="btn btn-primary rounded-circle" style="width: 12rem; height: 12rem; font-size:xx-large;" type="submit">
              Scan
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="toast" style="position: absolute; bottom: 0; right: 0; z-index: 1000000;" data-autohide="false">
    <div class="toast-header">
      <strong class="mr-auto">WAVSS Scan</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Scan has started. Get a Coffee!! It can take few minutes to complete.
    </div>
  </div>
  <script>
    $(document).ready(() => {
      $('#scansubmit').click(() => {
        $('.toast').toast('show');

      });
    });
  </script>
</body>

</html>